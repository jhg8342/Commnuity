<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >



    <TextView
        android:id="@+id/find_title"
        android:layout_width="wrap_content"
        android:layout_height="61dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="95dp"
        android:fontFamily="@font/sanghu_dajungdagam"
        android:text="Find PASSWORD"
        android:textColor="#5D5D5D"
        android:textSize="50dp"
        android:textStyle="bold"/>

    <LinearLayout
        android:id="@+id/find_linear1"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/find_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email" />

        <EditText
            android:id="@+id/find_email.text"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:ems="10"
            android:fontFamily="@font/sanghu_dajungdagam"
            android:hint="Enter the Email"
            android:maxLength="20"
            android:singleLine="true"
            android:textColor="#5D5D5D"
            android:textSize="15dp"
            android:textStyle="bold" />


    </LinearLayout>


    <Button
        android:id="@+id/find_back_button"
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        android:layout_below="@+id/find_linear1"
        android:layout_marginTop="35dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/solid_button"
        android:fontFamily="@font/sangju_gotgam"
        android:text="Back"
        android:textSize="10sp" />

    <Button
        android:id="@+id/find_send_button"
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        android:layout_below="@+id/find_back_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/solid_button"
        android:fontFamily="@font/sangju_gotgam"
        android:text="Send Email"
        android:textSize="10sp" />


</RelativeLayout>